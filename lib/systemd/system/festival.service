[Unit]
Description=Festival
After=speechdispatcherd.service

[Service]
ExecStart=/usr/bin/festival --server
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
Killmode=process

[Install]
WantedBy=multi-user.target